<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="EasyTasksPersistenciaJPAPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>DS2</jta-data-source>
    <class>com.easytasks.persistencia.entidades.Actividad</class>
    <class>com.easytasks.persistencia.entidades.Contexto</class>
    <class>com.easytasks.persistencia.entidades.Etiqueta</class>
    <class>com.easytasks.persistencia.entidades.Proyecto</class>
    <class>com.easytasks.persistencia.entidades.Realizable</class>
    <class>com.easytasks.persistencia.entidades.Tarea</class>
    <class>com.easytasks.persistencia.entidades.Usuario</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
